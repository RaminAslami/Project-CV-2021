@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Project_2022_CV.ViewModel.ProjectUserCreatorViewModel
<div style="margin:auto; width:70%;">
    <h2>Create Project</h2>

    @using (@Html.BeginForm("Create", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="form-group" style="margin-bottom: 1rem">
            @Html.LabelFor(p => p.project.Title)
            @Html.TextBoxFor(p => p.project.Title, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group" style="margin-bottom: 1rem">
            @Html.LabelFor(p => p.project.Description)
            @Html.TextBoxFor(p => p.project.Description, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group" style="margin-bottom: 1rem">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ImageFile" name="ImageFile" required />
                @Html.ValidationMessageFor(p => p.project.ProjectImage)
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin: 0.5rem; margin: auto; display: flex; margin-top: 2rem;">Save</button>

    }
</div>

@section scripts{

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">


    </script>
}







