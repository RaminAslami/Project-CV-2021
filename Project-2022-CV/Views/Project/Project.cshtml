@{
    ViewBag.Title = "Project";
}
@model Project_2022_CV.ViewModel.ListOfProjectsViewModel

<h1 class="text-center">Projects</h1>

<div class="text-center">
    <ul class="list-group list-group-horizontal-sm" style="display:inline-block;">

        @foreach (var p in Model.projects)
        {
        <li class="list-group-item" style="display:inline-block; margin: 1rem 1rem">
           
            <a href="/Project/ProjectPage?id=@p.Id.ToString()">
                <img src="@p.GetProjectImage()" class="mr-3" alt="...">
            </a>
            <div class="media-body">
                <h5 class="mt-0 mb-1"> <a href="/Project/ProjectPage?id=@p.Id.ToString()">@p.Title</a></h5>
                @p.Description
            </div>
        </li>
        }
    </ul>
</div>



