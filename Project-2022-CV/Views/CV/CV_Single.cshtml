@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "CV_Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Project_2022_CV.ViewModel.CvUserViewModel


<div class="container-xl mt-3 mb-5">
    @if (Model.showClicks)
    {
        <h1 id="Clicks"></h1>

    }

    <div>
        <a href="@Url.Action("CV_Matching","Cv", new {id=@Model.Cv.id})">
            <button type="button" class="btn btn-secondary btn-lg mb-3">Find a similar person!</button>

        </a>
        <a href="@Url.Action("SaveUser","Cv", new {id=@Model.Cv.id})">
            <button type="button" class="btn btn-primary btn-lg mb-3">Download User information</button>

        </a>

        <a href="@Url.Action("CV_Matching","Cv", new {id=@Model.Cv.id})"> </a>

        @if (User.Identity.GetUserName() != Model.User.Email)
        {
            <a style="margin-left: 20px; margin-bottom: 10px;" id="hej" class="btn btn-info btn-lg mb-3" href="@Url.Action("WriteMessageUser", "Message", new { id = @Model.Cv.id })">Write message</a>
        }

    </div>
    <div class="container" style="background-color: #DBD8E3; padding: 0 !important; border-radius: 0.6rem;">

        <header class="bg-primary bg-gradient  py-5 text-body" style="border-radius: 0.6rem 0.6rem 0rem 0rem; background-color: #FD7014 !important">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 text-left text-md-center mb-3">
                        <img class="rounded-circle img-fluid" src="@Model.User.GetProfileImage()" alt="Profile Photo" />
                    </div>
                    <div class="col-md-9">
                        <h1>@Model.User.Name</h1>
                        <h5>@Model.Cv.Title</h5>
                        <p class=" pt-3">@Model.Cv.Description</p>
                    </div>

                </div>
            </div>
        </header>
        <nav class="bg-dark text-white-50 mb-5" style="background-color: #393E46 !important">
            <div class="container">
                <div class="row p-3 text-center">
                    <div class="col-md pb-2 pb-md-0">
                        <svg width="1em" height="1.5em" viewBox="0 0 16 16" class="bi bi-envelope" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383l-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z" />
                        </svg>
                        <a href="mailto:@Model.User.Email" class="text-white ml-2">@Model.User.Email</a>
                    </div>
                    <div class="col-md text-md-center pb-2 pb-md-0">
                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-globe" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm7.5-6.923c-.67.204-1.335.82-1.887 1.855A7.97 7.97 0 0 0 5.145 4H7.5V1.077zM4.09 4H2.255a7.025 7.025 0 0 1 3.072-2.472 6.7 6.7 0 0 0-.597.933c-.247.464-.462.98-.64 1.539zm-.582 3.5h-2.49c.062-.89.291-1.733.656-2.5H3.82a13.652 13.652 0 0 0-.312 2.5zM4.847 5H7.5v2.5H4.51A12.5 12.5 0 0 1 4.846 5zM8.5 5v2.5h2.99a12.495 12.495 0 0 0-.337-2.5H8.5zM4.51 8.5H7.5V11H4.847a12.5 12.5 0 0 1-.338-2.5zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5H8.5zM5.145 12H7.5v2.923c-.67-.204-1.335-.82-1.887-1.855A7.97 7.97 0 0 1 5.145 12zm.182 2.472a6.696 6.696 0 0 1-.597-.933A9.268 9.268 0 0 1 4.09 12H2.255a7.024 7.024 0 0 0 3.072 2.472zM3.82 11H1.674a6.958 6.958 0 0 1-.656-2.5h2.49c.03.877.138 1.718.312 2.5zm6.853 3.472A7.024 7.024 0 0 0 13.745 12H11.91a9.27 9.27 0 0 1-.64 1.539 6.688 6.688 0 0 1-.597.933zM8.5 12h2.355a7.967 7.967 0 0 1-.468 1.068c-.552 1.035-1.218 1.65-1.887 1.855V12zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.65 13.65 0 0 1-.312 2.5zm2.802-3.5h-2.49A13.65 13.65 0 0 0 12.18 5h2.146c.365.767.594 1.61.656 2.5zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7.024 7.024 0 0 0-3.072-2.472c.218.284.418.598.597.933zM10.855 4H8.5V1.077c.67.204 1.335.82 1.887 1.855.173.324.33.682.468 1.068z" />
                        </svg>
                        <a href="#" class="text-white ml-2">@Model.User.webPage</a>
                    </div>
                    <div class="col-md text-md-right">
                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-telephone-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M2.267.98a1.636 1.636 0 0 1 2.448.152l1.681 2.162c.309.396.418.913.296 1.4l-.513 2.053a.636.636 0 0 0 .167.604L8.65 9.654a.636.636 0 0 0 .604.167l2.052-.513a1.636 1.636 0 0 1 1.401.296l2.162 1.681c.777.604.849 1.753.153 2.448l-.97.97c-.693.693-1.73.998-2.697.658a17.47 17.47 0 0 1-6.571-4.144A17.47 17.47 0 0 1 .639 4.646c-.34-.967-.035-2.004.658-2.698l.97-.969z" />
                        </svg>
                        <a href="#" class="text-white ml-2">@Model.User.PhoneNumber</a>
                    </div>
                </div>
            </div>
        </nav>

        <main class="container">
            <div class="row" style="margin-left: 1rem !important">
                <div class="col-md mb-5">
                    <h2 class="mb-5">Work Experience</h2>
                    <ul>
                        @foreach (var c in Model.Cv.WorkExperiences)
                        {
                            <li>
                                <h6 class="text-primary">@c.Title / @c.WorkPlace @c.StartYear.Year-@c.EndYear.Value.Year</h6>
                                <p>@c.WorkDescription</p>
                            </li>
                        }

                    </ul>
                </div>
                <div class="col-md mb-5">
                    <h2 class="mb-5">Education</h2>
                    <ul>
                        @foreach (var c in Model.Cv.Educations)
                        {
                            <li>
                                <h6 class="text-primary">@c.Title / @c.WorkPlace @c.StartYear.Year-@c.EndYear.Value.Year</h6>
                                <p>@c.WorkDescription</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md mb-5">
                    <h2 class="mb-5 text-center">My summary of knowledge</h2>
                    @foreach (var skill in Model.Cv.SkillList)
                    {
                        <div class="progress mb-4" style="height: 25px;">
                            <div class="progress-bar bg-primary text-left pl-2" role="progressbar" style="width:@skill.SkillValue%" aria-valuenow="@skill.SkillValue" aria-valuemin="0" aria-valuemax="100">@skill.SkillName</div>
                        </div>

                    }

                </div>

            </div>
        </main>
    </div>
</div>

@* Projekt personen varit med i.  *@
@if (Model.UserProjects.Count != 0)
{

    <h1 class="text-center mt-5 mb-5">Projects i've been a part of</h1>
}

@foreach (var c in Model.UserProjects)
{

    <div class="container marketing mt-5 mb-5">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading" style="margin-top:7rem ">@c.Title <span class="text-muted">@c.Created.Year</span></h2>
                <p class="lead">@c.Description</p>
                <a href="/Project/projectpage?id=@c.Id">

                <button type="button" class="btn btn-secondary btn-lg">View Project</button>
                </a>
            </div>
            <div class="col-md-5" style="align-self: center">
                <img class=" img-fluid rounded-circle" width="400" height="400" src="@c.GetProjectImage()" alt="Profile Photo" />
            </div>
        </div>

    </div>
}
<div id="GitRep" class="list-group">


</div>
<label id="gitUserName" hidden>@Model.User.GitUserName</label>
@section scripts
{

    <script>
    $(document).ready(function () {
        var clicks = 0;
        $.get("/api/Cv?id=" + @Model.Cv.id,
            function (data) {
                clicks = data.Clicks;

        $("#Clicks").append("Your cv has been viewed " + clicks + " times");
            });


        var gitName = document.getElementById('gitUserName').textContent;
        console.log(gitName);
        $.get("/api/github?gitUser=" + gitName,
            function (data) {
                if (data.$values.length!=0) {
                    $("#GitRep").append("<h1 class='text-center mt-5 mb-5'>My Github Repositorys:</h1>");
                }
                for (var i = 0; i < data.$values.length; i++) {
                    $("#GitRep").append(" <a href='" + data.$values[i].html_url + "' class='list-group-item list-group-item-action d-flex gap-3 py-3' aria-current='true'><img src='/Content/Github.svg' alt='twbs' width='32' height='32' class='rounded-circle flex-shrink-0'><div class='d-flex gap-2 w-100 justify-content-between'><div><h6 class='mb-0'>" + data.$values[i].name +"</h6><p class='mb-0 opacity-75'>" + data.$values[i].description + "</p></div><small class='opacity-50 text-nowrap'></small></div></a>");
                }
            });

    });
    </script>
}

