@model Project_2022_CV.ViewModel.ProjectViewModel
@using (Html.BeginForm("_ProjectAdd", "Image", new { id = Model.Project.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <h4>Profile Picture</h4>
        <div class="col-md-3 mb-3">
            <img class="rounded-circle img-fluid" src="@Model.Project.GetProjectImage()" alt="Profile Photo">
        </div>

        <div class="form-group">
            <input type="file" id="ImageFile" name="ImageFile" />


        </div>
    </div>

    <div class="form-group">
        <div class="mt-3">

            <input id="submitImage" type="submit" value="Change picture" class="btn btn-warning" onclick="return confirm('Are you sure you want to change the picture?')" />
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {



        });


    </script>
}

