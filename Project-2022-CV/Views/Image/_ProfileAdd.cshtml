@model Project_2022_CV.Models.ApplicationUser
@using (Html.BeginForm("_ProfileAdd", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ProfilePicture</h4>
        <hr />
        <div class="col-md-3 text-left text-md-center mb-3">
            <img class="rounded-circle img-fluid" src="@Model.GetProfileImage()" alt="Profile Photo">
        </div>




        <div class="form-group">

            <input type="file" id="ImageFile" name="ImageFile" />


        </div>
    </div>

    <div class="form-group">
        <div class="mt-3">

            <input id="submitImage" type="submit" value="Submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to change the picture?')" />
        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {



        });


    </script>
}
